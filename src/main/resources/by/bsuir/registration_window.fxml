<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.bsuir.RegistrationWindowController">
    <AnchorPane layoutY="-6.0" prefHeight="200.0" prefWidth="800.0" style="-fx-background-color: #000000;">
        <Text fill="WHITE" layoutX="310.0" layoutY="120.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Vehicles">
            <font>
                <Font size="50.0" />
            </font>
        </Text>
      <Button fx:id="backButton" layoutX="60.0" layoutY="84.0" mnemonicParsing="false" text="&lt;" />
    </AnchorPane>
   <RadioButton fx:id="bicycleRadio" layoutX="90.0" layoutY="223.0" mnemonicParsing="false" selected="true" text="Bicycle">
      <font>
         <Font size="18.0" />
      </font>
      <toggleGroup>
         <ToggleGroup fx:id="group" />
      </toggleGroup>
   </RadioButton>
   <RadioButton fx:id="carRadio" layoutX="465.0" layoutY="223.0" mnemonicParsing="false" text="Car" toggleGroup="$group">
      <font>
         <Font size="18.0" />
      </font>
   </RadioButton>
   <RadioButton fx:id="motorcycleRadio" layoutX="265.0" layoutY="223.0" mnemonicParsing="false" text="Motorcycle" toggleGroup="$group">
      <font>
         <Font size="18.0" />
      </font>
   </RadioButton>
   <RadioButton fx:id="truckRadio" layoutX="615.0" layoutY="223.0" mnemonicParsing="false" text="Truck" toggleGroup="$group">
      <font>
         <Font size="18.0" />
      </font>
   </RadioButton>
   <TextField fx:id="brandInput" layoutX="75.0" layoutY="285.0" promptText="Brand:" />
   <TextField fx:id="modelInput" layoutX="300.0" layoutY="285.0" promptText="Model:" />
   <TextField fx:id="colorInput" layoutX="530.0" layoutY="285.0" promptText="Color:" />
   <TextField fx:id="engineManufacturerInput" layoutX="75.0" layoutY="360.0" promptText="Engine Manufacturer:" visible="false" />
   <TextField fx:id="engineVolumeInput" layoutX="300.0" layoutY="360.0" promptText="Engine Volume:" visible="false" />
   <ChoiceBox fx:id="typeInput" layoutX="530.0" layoutY="360.0" prefWidth="150.0" />
   <TextField fx:id="capacityInput" layoutX="530.0" layoutY="360.0" promptText="Capacity:" visible="false" />
   <TextField fx:id="passengersInput" layoutX="530.0" layoutY="360.0" promptText="Amount of Passangers:" visible="false" />
   <Button fx:id="saveButton" layoutX="300.0" layoutY="470.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="Save" />
</AnchorPane>
